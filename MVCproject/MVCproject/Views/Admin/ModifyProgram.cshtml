<h2>Modify Programs</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Benefits</th>
            <th>Charge</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var program in Model)
        {
            <tr>
                <form method="post" action="/Admin/ModifyProgram">
                <td>
                    <!-- Display ProgramName as plain text -->
                        @program.ProgramName
                    <input type="hidden" name="oldName" value="@program.ProgramName" />
                </td>
                <td><textarea name="newBenefits">@program.Benefits</textarea></td>
                <td><input type="number" step="0.01" name="newCharge" value="@program.Charge" /></td>
                <td>
                    <input type="hidden" name="oldName" value="@program.ProgramName" />
                    <button type="submit">Modify</button>
                </td>
                </form>
            </tr>
        }
    </tbody>
</table>
